<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Essential for VSCode/Electron on Apple Silicon -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>

    <!-- File system access required for VSCode to open/save files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Optional: Only include if your fork specifically needs these -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    <key>com.apple.security.device.camera</key>
    <true/>

    <!-- REMOVED: com.apple.security.cs.disable-executable-page-protection -->
    <!-- This entitlement is overly permissive and is known to cause notarization
         and Gatekeeper rejections, leading to "Code 5" errors on M-series Macs. -->

    <!-- REMOVED: com.apple.security.automation.apple-events -->
    <!-- Usually not needed for VSCode forks unless you explicitly integrate
         with other Apple applications via Apple Events. Removing for least privilege. -->
</dict>
</plist>
